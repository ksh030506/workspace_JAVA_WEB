package _4;

import java.util.Scanner;

//10진수 -> 2진수

public class Main {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);

		boolean ok = true;
		while (ok == true) {
			System.out.print("2진수로 바꿀 10진수를 입력해 주세요 >> ");
			int inputNum = in.nextInt();

			int[] bin = new int[100];

			int i = 0;

			int mok = inputNum;

			while (mok > 0) {
				bin[i] = mok % 2;
				mok /= 2;
				i++;
			}

			i--;
			for (; i >= 0; i--) {
				System.out.print(bin[i]);
			}

			System.out.print("계속 하시겠습니까?(yes/no) >> ");
			String a;
			
			if(!a == 'yes') {
				
			}
		}

	}

}
